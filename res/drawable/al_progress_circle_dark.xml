<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress">
        <shape android:shape="ring" android:innerRadiusRatio="3.0" android:thicknessRatio="14.0" android:useLevel="true">
            <gradient android:startColor="#ff555555" android:endColor="#ff555555" android:type="sweep" android:centerColor="#ff555555" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <rotate android:fromDegrees="270.0" android:toDegrees="270.0" android:pivotX="50.0%" android:pivotY="50.0%">
            <shape android:shape="ring" android:innerRadiusRatio="3.0" android:thicknessRatio="14.0" android:useLevel="true">
                <rotate android:fromDegrees="0.0" android:toDegrees="360.0" android:pivotX="50.0%" android:pivotY="50.0%" />
                <gradient android:startColor="#ffe6e6e6" android:endColor="#ffe6e6e6" android:type="sweep" android:centerColor="#ffe6e6e6" />
            </shape>
        </rotate>
    </item>
</layer-list>